<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mnopi.mnopi"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.INTERNET" /> 
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
	</uses-permission>
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />
    <application
        android:name=".MnopiApplication"
        android:debuggable="true"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.mnopi.mnopi.MainActivity" 
            android:theme="@style/CustomThemeBlack">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mnopi.mnopi.RegisterActivity" 
            android:theme="@style/CustomThemeBlack">
            
        </activity>
        <activity android:name="com.mnopi.mnopi.WelcomeActivity" 
            android:theme="@style/CustomThemeBlack">
        </activity>
        <activity android:name="com.mnopi.mnopi.PermissionActivity" 
            android:theme="@style/CustomThemeBlack">
        </activity>
        <activity android:name="com.mnopi.mnopi.ViewDataActivity" 
            android:theme="@style/CustomThemeBlack">
        </activity>
        <activity android:name="com.mnopi.mnopi.ViewQueriesActivity" >
        </activity>
        <activity android:name="com.mnopi.mnopi.ViewPagesVisitedActivity" >
        </activity>
        <service android:name="com.mnopi.services.DataCollectorService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.mnopi.services.DataCollectorService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>
    </application>

</manifest>